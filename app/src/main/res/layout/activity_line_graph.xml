<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:fitsSystemWindows="true">

	<include layout="@layout/app_bar"/>

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:orientation="vertical"
		app:layout_behavior="@string/appbar_scrolling_view_behavior">

		<android.support.v7.widget.GridLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="@dimen/size_8"
			android:background="@color/material_gray_900"
			android:elevation="3dp"
			android:paddingBottom="@dimen/activity_vertical_margin"
			android:paddingLeft="@dimen/activity_horizontal_margin"
			android:paddingRight="@dimen/activity_horizontal_margin"
			android:paddingTop="@dimen/activity_vertical_margin"
			app:columnCount="2"
			tools:showIn="@layout/activity_line_graph">

			<TextView
				android:id="@+id/stock_symbol"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textAllCaps="true"
				app:layout_row="0"
				app:layout_column="0"
				android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
				android:transitionName="@string/transition_name_symbol"
				tools:text="GOOG"/>

			<LinearLayout
				android:orientation="vertical"
				app:layout_column="0"
				app:layout_row="1"
				android:layout_marginTop="@dimen/size_8"
				app:layout_rowSpan="3"
				app:layout_rowWeight="1">

				<TextView
					style="@style/ValueCaption"
					android:text="@string/label_bid_price"/>

				<TextView
					android:id="@+id/stock_bid"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="30sp"
					tools:text="1000.56"/>
			</LinearLayout>

			<TextView
				style="@style/ValueCaption"
				android:text="@string/label_change"
				app:layout_column="1"
				app:layout_gravity="end"
				app:layout_row="0"/>

			<FrameLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginBottom="@dimen/size_16"
				app:layout_column="1"
				app:layout_gravity="end|bottom"
				app:layout_row="1">

				<TextView
					android:id="@+id/stock_change"
					style="@style/PercentChangeTextStyle"
					tools:text="100"/>
			</FrameLayout>

			<TextView
				style="@style/ValueCaption"
				android:text="@string/label_change_in_percent"
				app:layout_column="1"
				app:layout_gravity="end|bottom"
				app:layout_row="2"
				app:layout_rowWeight="1"/>

			<FrameLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center_vertical"
				app:layout_column="1"
				app:layout_gravity="end|bottom"
				app:layout_row="3"
				app:layout_rowWeight="1">

				<TextView
					android:id="@+id/stock_change_percent"
					style="@style/PercentChangeTextStyle"
					tools:text="10%"/>
			</FrameLayout>
		</android.support.v7.widget.GridLayout>

		<lecho.lib.hellocharts.view.LineChartView
			android:id="@+id/linechart"
			android:layout_width="match_parent"
			android:layout_height="match_parent"/>
	</LinearLayout>
</android.support.design.widget.CoordinatorLayout>